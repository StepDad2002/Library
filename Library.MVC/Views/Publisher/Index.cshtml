@model IEnumerable<PublisherListVM>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    ViewBag.Controller = "Publisher";
    ViewBag.Action = "SearchByName";
    ViewBag.Placeholder = "publisher";
    ViewBag.ParamName = "name";
}



<div class="w-full flex flex-wrap gap-8 p-7 justify-center overflow-hidden">
    @foreach (var publisher in Model)
    {
        <div class="max-w-md w-full p-6 bg-slate-300 rounded-lg shadow-lg">
            <div class="flex justify-center mb-8">
                <img src="~/img/person-circle-plus-solid.svg" alt="Logo" class="w-30 h-20">
            </div>
            <h1 class="text-2xl font-semibold text-center text-gray-500 mt-8 mb-6">@publisher.Name</h1>
            <p class="text-sm text-gray-600 text-center mt-8 mb-6">Phone: @publisher.Phone</p>
            <div class="flex justify-center space-x-4 my-4">
                <a class="bg-gradient-to-r from-cyan-400 to-cyan-600 text-white text-center px-4 py-2 rounded-md w-1/3" asp-action="Details" asp-route-id="@publisher.Id">Details</a>
            </div>
            <div class="text-center">
                Website: @(publisher.WebSite ?? "No information")
            </div>
        </div>
    }
</div>