@model IEnumerable<AuthorVM>

@{
    ViewBag.Title = "Authors";
    Layout = "_LayoutWithoutSearch";
}


<div class="w-full min-h-[15rem] mx-auto p-8 rounded md:max-h-[20rem]">
    <h2 class="text-2xl font-bold text-center mb-6 text-white">Search for Author</h2>
    <form asp-action="Search" asp-controller="Author" method="get">
        <section class="flex flex-col md:flex-row items-center md:justify-center md:flex-wrap gap-4 ">
            <div>
                <label class="block text-white">Name</label>
                <input type="text" name="Name" class="mt-1 text-red-900 block w-48 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label class="block text-white">Nationality</label>
                <input type="text" name="Nationality" class="mt-1 text-red-900 block w-48 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label class="block text-white">Birthday</label>
                <input type="date" name="Birthday" class="mt-1 text-red-900 block w-48 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>

        </section>
        <div class="flex justify-center mt-6">
            <button type="submit" class="w-48 py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700">Search</button>
        </div>
    </form>
</div>


<div class="w-full flex flex-wrap gap-8 p-7 justify-center overflow-hidden">
    @foreach (var author in Model)
    {
        <div class="max-w-md w-full p-6 bg-slate-300 rounded-lg shadow-lg">
            <div class="flex justify-center mb-8">
                <img src="~/img/person-rays-solid.svg" alt="Logo" class="w-30 h-20">
            </div>
            <h1 class="text-2xl font-semibold text-center text-gray-500 mt-8 mb-6">@author.FName @author.LName</h1>
            <p class="text-sm text-gray-600 text-justify mt-8 mb-6">@(author.Biography ?? "No description at the moment")</p>
            <div class="flex justify-center space-x-4 my-4">
                <a class="bg-gradient-to-r from-cyan-400 to-cyan-600 text-white text-center px-4 py-2 rounded-md w-1/3" asp-action="Details" asp-route-id="@author.Id">Details</a>
            </div>
            <div class="text-center">
                Nationality: @(author.Nationality ?? "No information")
            </div>
            <p class="text-xs text-gray-600 text-center mt-8">Birthday: @(author.BirthDay?.ToShortDateString() ?? "No information")</p>
        </div>
    }
</div>